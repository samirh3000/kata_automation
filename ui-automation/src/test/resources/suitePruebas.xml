<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="UI Suite - Métodos Específicos" parallel="tests" thread-count="1">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="Casos de prueba Login - OrangeHRM" parallel="methods" thread-count="2">
        <parameter name="browser" value="chrome"/>
        <parameter name="useBrowserStack" value="false"/>
        <classes>
            <class name="com.orangehrm.tests.AddEmployeeTest">
                <methods>
                    <include name="testAddEmployee"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>


